<div class="flex justify-center text-left">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full sm:px-6 lg:px-8">
            <div class="overflow-hidden">
                <table>
                    <thead class="bg-white border-b">
                        <tr>
                            <th scope="col" class="p-4">
                                Code
                            </th>
                            <th scope="col" class="p-4">
                                Prefecture
                            </th>
                            <th scope="col" class="p-4">
                                Cities
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @prefectures.each do |prefecture| %>
                            <tr class="border-b hover:bg-gray-100 whitespace-nowrap">
                                <td class="p-4"><%= prefecture.code %></td>
                                <td class="p-4 text-teal-500 hover:text-teal-300 focus:underline"><%= link_to prefecture.name, prefecture_path(prefecture) %></td>
                                <td class="p-4 font-normal text-center"><%= get_number_of_cities_by_prefecture_id(prefecture) %></td> 
                                <td class="px-2 py-4 text-teal-500 hover:text-teal-300 focus:underline"><%= link_to "Add city", new_city_path(prefecture) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>