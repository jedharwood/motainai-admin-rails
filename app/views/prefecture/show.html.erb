<% if @cities.count == 0 %>
    <%= render 'layouts/authorization_filter', 
        page_title: "There are no cities listed yet for #{@prefecture.name}", 
        description: "",
        page_content: 'prefecture_display'
    %>
<% else %>
     <%= render 'layouts/authorization_filter', 
        page_title: "Cities for #{@prefecture.name}",
        description: "", 
        page_content: 'prefecture_display'
    %>
<% end %>


