<div data-controller="authorization-filter" class="text-md font-medium text-gray-900 text-center">
    <div class="p-4">
        <h4 class="text-2xl leading-6 text-gray-900 mt-2"><%= page_title %></h4>
        <div class="mt-2">
            <% if approved_user?(user_signed_in?, current_user&.profile) %>
                <p class="font-normal"><%= description %></p>
                <%= render page_content if page_content %>
            <% elsif user_signed_in? %>
                <p>Your account is pending approval. Please contact your administrator.</p>
            <% else %>
                <p>This area is for approved admin users. Please <a data-authorization-filter-target="userAuthLink" class="text-teal-500 hover:text-teal-300 focus:underline cursor-pointer">sign up</a> or <a data-authorization-filter-target="userAuthLink" class="text-teal-500 hover:text-teal-300 focus:underline cursor-pointer">log in</a>.</p>
            <% end %>
        </div>
    </div>
</div>

<%= render 'shared/modal', modal_content: 'shared/user_auth_form' %>