<% if flash[:success].present? %>
    <div class="bg-teal-100 border-t-4 border-teal-500 text-teal-900 px-4 py-3 shadow-md" role="alert">
        <div class="flex">
            <div>
                <p class="font-bold"><%= flash[:success] %></p>
            </div>
        </div>
    </div>
<% end %>
<% if flash[:error].present? %>
    <div class="bg-rose-100 border-t-4 border-rose-500 text-rose-900 px-4 py-3 shadow-md" role="alert">
        <div class="flex">
            <div>
                <p class="font-bold"><%= flash[:error] %></p>
            </div>
        </div>
    </div>
<% end %>
