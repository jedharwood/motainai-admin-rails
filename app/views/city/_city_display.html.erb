<div class="mt-2">
    <p>Prefecture: <%= link_to @city.prefecture.name, prefecture_path(@city.prefecture), class: "px-2 py-4 text-teal-500 hover:text-teal-300 focus:underline" %></p>
    <p>Rating: <%= @city.rating %></p>
    <span class="inline-flex">
        <%= link_to edit_city_path(@city), class: "px-2 py-3 text-teal-500 hover:text-teal-300 focus:underline" do %>
            <%= inline_svg_tag('svg/edit_icon.svg', class: 'w-5 h-5') %>
        <% end %>
        <%= button_to city_path(@city), class: "px-2 py-3 text-teal-500 hover:text-teal-300 focus:underline delete-button", method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete #{@city.name}?" } } do %>
            <%= inline_svg_tag('svg/delete_icon.svg', class: 'h-5 w-5') %>
        <% end %>
    </span>
</div>
<div class="border-t">
    <h4 class="text-2xl leading-6 text-gray-900 mt-3 mb-4">Rules</h4>
    <%= link_to "Add a rule", new_waste_type_path(@city), class: "main-button w-full sm:w-1/2 inline-flex items-center justify-center px6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-teal-500 hover:bg-teal-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
</div>
<div class="flex justify-center text-left"> 
        <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="inline-block min-w-full sm:px-6 lg:px-8">
                <div class="overflow-hidden">
                    <table>
                        <thead class="bg-white border-b">
                            <tr>
                                <th scope="col" class="p-4">
                                    Day
                                </th>
                                <th scope="col" class="p-4">
                                    Name
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @waste_types.each do |waste_type| %>
                                <tr class="border-b hover:bg-gray-100 whitespace-nowrap">
                                    <td class="p-4"><%= waste_type.rule_day.name %></td>
                                    <td class="p-4 text-teal-500 hover:text-teal-300 focus:underline"><%= link_to waste_type.name, waste_type_path(waste_type) %></td>
                                    <td class="px-2 py-4 text-teal-500 hover:text-teal-300 focus:underline">
                                        <%= link_to edit_waste_type_path(waste_type) do %>
                                            <%= inline_svg_tag('svg/edit_icon.svg', class: 'w-5 h-5') %>
                                        <% end %>
                                    </td>
                                    <td class="px-2 py-4 text-teal-500 hover:text-teal-300 focus:underline delete-button">
                                        <%= button_to waste_type_path(waste_type), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete #{waste_type.name}?" } } do %>
                                            <%= inline_svg_tag('svg/delete_icon.svg', class: 'h-5 w-5') %>
                                        <% end %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


