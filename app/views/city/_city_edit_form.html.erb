<%= form_with model: @city, url: edit_city_path, method: :patch, local: true, scope: :city do |f| %>
    <div class="w-full sm:w-1/2 inline-block mt-4">
        <div class="rounded-md shadow-sm -space-y-px">
            <div class="grid">
                <%= f.label :name, "Prefecture", class: "text-sm text-left" %>
                <%= f.collection_select :prefecture_id, @prefectures, :id, :name, include_blank: true, autofocus: true, :prompt => 'Prefecture', :class => 'w-full' %>
            </div>
            <div class="grid">
                <%= f.label :name, "City name", class: "text-sm text-left" %>
                <%= f.text_field :name, autofocus: true, placeholder: "City name", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus-within:ring-1 focus-within:ring-slate-800 focus-within:border-slate-800 focus:z-10 sm:text-sm mb-4" %>
            </div>
            <div class="grid">
                <%= f.label :name, "Rating", class: "text-sm text-left" %>
                <%= f.text_field :rating, autofocus: true, placeholder: "City rating", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus-within:ring-1 focus-within:ring-slate-800 focus-within:border-slate-800 focus:z-10 sm:text-sm mb-4" %>
            </div>
        </div>
        <div>
            <%= f.submit "Update", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-500 hover:bg-teal-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
        </div>
    </div>
<% end %>
