<%= form_with model: @city, url: edit_city_path, method: :patch, local: true, scope: :city do |f| %>
    <div class="w-full sm:w-1/2 inline-block mt-4">
        <div class="shadow-sm -space-y-px focus:z-10">
            <div>
                <%= f.label :prefecture_id, "Prefecture", class: "sr-only" %>
                <%= f.collection_select :prefecture_id, @prefectures, :id, :name, { prompt: 'Prefecture' }, { class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 rounded-md focus-within:ring-1 focus-within:ring-slate-800 focus-within:border-slate-800 sm:text-sm mb-4" } %>
            </div>
            <div>
                <%= f.label :name, "City name", class: "sr-only" %>
                <%= f.text_field :name, autofocus: true, placeholder: "City name", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 rounded-md focus-within:ring-1 focus-within:ring-slate-800 focus-within:border-slate-800 sm:text-sm mb-4" %>
            </div>
            <div>
                <%= f.label :rating, "Rating", class: "sr-only" %>
                <%= f.number_field :rating, min: 0, max: 5, step: 0.1, autofocus: true, placeholder: "City rating", class: "appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 rounded-md focus-within:ring-1 focus-within:ring-slate-800 focus-within:border-slate-800 sm:text-sm mb-4" %>
            </div>
        </div>
        <div>
            <%= f.submit "Update", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-teal-500 hover:bg-teal-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800" %>
        </div>
    </div>
<% end %>


