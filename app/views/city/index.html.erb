<div data-controller="home-login" class="text-md font-medium text-gray-900 text-center">
    <div class="py-4">
        <h4 class="text-2xl leading-6 text-gray-900 mt-2">Cities</h4>
        <div class="mt-2">
            <% if is_approved_user %>
                <p class="font-normal">Need to make add/edit actions and put in buttons on this page</p>
                <div class="flex justify-center text-left">
                    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
                        <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
                            <div class="overflow-hidden">
                                <table>
                                    <thead class="bg-white border-b">
                                        <tr>
                                            <th scope="col" class="px-6 py-4">
                                                Prefecture
                                            </th>
                                            <th scope="col" class="px-6 py-4">
                                                City
                                            </th>
                                            <th scope="col" class="px-6 py-4">
                                                Has rules?
                                            </th>
                                            <th scope="col" class="px-6 py-4">
                                                Edit
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @cities.each do |city| %>
                                            <tr class="border-b hover:bg-gray-100 whitespace-nowrap">
                                                <td class="px-6 py-4"><%= city.prefecture.name %></td>
                                                <td class="px-6 py-4 px-2 text-teal-500 hover:text-teal-300 focus:underline"><%= link_to city.name, city_path(city) %></td>
                                                <td class="px-6 py-4 font-normal">placeholder</td> 
                                                <td class="px-6 py-4 font-normal">placeholder</td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>  
            <% elsif user_signed_in? %>
                <p>Your account is pending approval. Please contact your administrator.</p>
            <% else %>
                <p>Please <a data-home-login-target="userAuthLink" class="text-teal-500 hover:text-teal-300 focus:underline cursor-pointer">sign up</a> or <a data-home-login-target="userAuthLink" class="text-teal-500 hover:text-teal-300 focus:underline cursor-pointer">log in</a>.</p>
            <% end %>
        </div>
    </div>
</div>

<%= render 'shared/modal', modal_content: 'home/user_auth_form' %>